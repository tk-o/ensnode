{
  "name": "ensindexer",
  "version": "0.36.0",
  "private": true,
  "type": "module",
  "description": "A multichain ENS indexer, powered by Ponder",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/namehash/ensnode.git",
    "directory": "apps/ensindexer"
  },
  "homepage": "https://github.com/namehash/ensnode/tree/main/apps/ensindexer",
  "scripts": {
    "dev": "DATABASE_SCHEMA=public ponder --root ./ponder dev",
    "start": "ponder --root ./ponder start",
    "serve": "ponder --root ./ponder serve",
    "db": "ponder --root ./ponder db",
    "codegen": "ponder --root ./ponder codegen",
    "test": "vitest",
    "lint": "biome check --write .",
    "lint:ci": "biome ci",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ensdomains/ensjs": "^4.0.2",
    "@ensnode/datasources": "workspace:*",
    "@namehash/ens-referrals": "workspace:*",
    "@ensnode/ensnode-schema": "workspace:*",
    "@ensnode/ensnode-sdk": "workspace:*",
    "@ensnode/ensrainbow-sdk": "workspace:*",
    "@ensnode/ponder-metadata": "workspace:*",
    "caip": "^1.1.1",
    "date-fns": "catalog:",
    "deepmerge-ts": "^7.1.5",
    "dns-packet": "^5.6.1",
    "hono": "catalog:",
    "pg-connection-string": "catalog:",
    "ponder": "catalog:",
    "viem": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@ensnode/shared-configs": "workspace:*",
    "@types/dns-packet": "^5.6.5",
    "@types/node": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
